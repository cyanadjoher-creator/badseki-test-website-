{% schema %}
{
  "name": "Hero video",
  "settings": [
    { "type": "url", "id": "mp4", "label": "MP4 video URL" },
    { "type": "image_picker", "id": "poster", "label": "Poster image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "BADSEKI" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Automotive â€” Apparel" },
    { "type": "text", "id": "cta_label", "label": "CTA label", "default": "Shop" },
    { "type": "url", "id": "cta_url", "label": "CTA link", "default": "/collections/all" }
  ],
  "presets": [{ "name": "Hero video" }]
}
{% endschema %}

<section class="card" style="overflow:hidden">
  {% if section.settings.mp4 != blank %}
    <video autoplay muted playsinline loop style="width:100%;height:auto;display:block" {% if section.settings.poster %}poster="{{ section.settings.poster | image_url }}"{% endif %}>
      <source src="{{ section.settings.mp4 }}" type="video/mp4">
    </video>
  {% elsif section.settings.poster != blank %}
    <img src="{{ section.settings.poster | image_url }}" alt="Hero" />
  {% endif %}
  <div class="pad" style="display:flex;align-items:center;justify-content:space-between;gap:16px;flex-wrap:wrap">
    <div>
      <h1 style="margin:0 0 4px 0">{{ section.settings.heading }}</h1>
      <p class="muted" style="margin:0">{{ section.settings.subheading }}</p>
    </div>
    {% if section.settings.cta_label and section.settings.cta_url %}
      <a class="btn" href="{{ section.settings.cta_url }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>
