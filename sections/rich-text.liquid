{% schema %}
{
  "name": "Rich text",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Headline" },
    { "type": "textarea", "id": "text", "label": "Text", "default": "Add your copy here." },
    { "type": "text", "id": "cta_label", "label": "CTA label" },
    { "type": "url", "id": "cta_url", "label": "CTA link" }
  ],
  "presets": [{ "name": "Rich text" }]
}
{% endschema %}

<section class="card">
  <div class="pad">
    {% if section.settings.heading != blank %}<h2 style="margin:0 0 8px 0">{{ section.settings.heading }}</h2>{% endif %}
    {% if section.settings.text != blank %}<p class="muted" style="margin:0 0 12px 0">{{ section.settings.text }}</p>{% endif %}
    {% if section.settings.cta_label and section.settings.cta_url %}
      <a class="btn" href="{{ section.settings.cta_url }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>
